{
  "name": "explan",
  "displayName": "Explan - Gantt Chart Editor",
  "description": "Create and edit gantt charts for project planning.",
  "version": "0.0.2",
  "publisher": "Explan-org",
  "repository": {
    "type": "git",
    "url": "https://github.com/explan-org/explan"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "explan.editor",
        "displayName": "Explan",
        "selector": [
          {
            "filenamePattern": "*.explan"
          },
          {
            "filenamePattern": "*.explan.json"
          },
          {
            "filenamePattern": "*.explan.png"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "explan.editor.new",
        "title": "Create new Explan Document",
        "category": "Explan"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}