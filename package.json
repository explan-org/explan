{
  "name": "explan",
  "version": "1.0.0",
  "description": "Project planning software.",
  "type": "module",
  "scripts": {
    "build:ext:prod": "npx esbuild ./src/vscodeext.ts --bundle --outdir=dst --minify && node ./build/merge.ts",
    "build:ext": "npx esbuild ./src/vscodeext.ts --bundle --outdir=dst --sourcemap=inline && node ./build/merge.ts",
    "build:prod": "npx esbuild ./src/page.ts --bundle --outdir=dst --minify --target=es2022",
    "build": "npx esbuild ./src/page.ts --bundle --outdir=dst",
    "compile": "npx tsc",
    "format": "npx prettier -w \"./src/**/*.ts\"",
    "lint": "npx eslint",
    "serve": "npx http-server -c-1 -a localhost",
    "test:cont": "npx web-test-runner \"./src/**/*_test.ts\" --puppeteer --watch",
    "test": "npx web-test-runner \"./src/**/*_test.ts\" --puppeteer",
    "watch": "git ls-files | entr bash -c \"npm run build && npm run build:ext\""
  },
  "keywords": [
    "gantt",
    "pert",
    "project management"
  ],
  "author": "joe@bitworking.org",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "9.5.0",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@tsconfig/recommended": "1.0.6",
    "@types/mocha": "10.0.6",
    "@web/dev-server-esbuild": "1.0.2",
    "@web/test-runner": "0.18.2",
    "@web/test-runner-puppeteer": "0.16.0",
    "esbuild": "0.21.5",
    "eslint": "^9.11.1",
    "globals": "15.4.0",
    "http-server": "14.1.1",
    "prettier": "^3.3.3",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "fuzzysort": "^3.1.0",
    "lit-html": "^3.2.1",
    "typescript-eslint": "^8.29.0"
  }
}