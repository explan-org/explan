{
  "name": "explan",
  "version": "1.0.0",
  "description": "Project planning software.",
  "type": "module",
  "scripts": {
    "build:ext:prod": "npx esbuild ./src/vscodeext.ts --bundle --outdir=dst/prod --minify",
    "build:ext": "npx esbuild ./src/vscodeext.ts --bundle --outdir=dst/dev --sourcemap=inline",
    "build:prod": "npx esbuild ./src/page.ts --bundle --outdir=dst/prod --minify --target=es2022",
    "build": "npx esbuild ./src/page.ts --bundle --sourcemap=inline --outdir=dst/dev",
    "build:all": "npm run build:ext:prod && npm run build:ext && npm run build:prod && npm run build",
    "compile": "npx tsc",
    "format": "npx prettier -w \"./src/**/*.ts\"",
    "lint": "npx eslint",
    "serve": "npx http-server -c-1 -a localhost",
    "test:cont": "npx web-test-runner \"./src/**/*_test.ts\" --puppeteer --watch",
    "jest": "npx jest",
    "jest:cont": "npx jest --watchAll",
    "docs:serve": "cd docs && npx @11ty/eleventy --serve",
    "docs:deploy": "cd docs && npx @11ty/eleventy && cd - && npx firebase deploy",
    "test": "npx web-test-runner \"./src/**/*_test.ts\" --puppeteer",
    "watch": "git ls-files | entr bash -c \"npm run build:all && node ./build/merge.ts\""
  },
  "keywords": [
    "gantt",
    "pert",
    "project management"
  ],
  "author": "joe@bitworking.org",
  "license": "Apache-2.0",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@eslint/js": "9.5.0",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@tsconfig/recommended": "1.0.6",
    "@types/mocha": "10.0.6",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@web/dev-server-esbuild": "1.0.2",
    "@web/test-runner": "0.18.2",
    "@web/test-runner-puppeteer": "0.16.0",
    "esbuild": "0.21.5",
    "eslint": "^9.11.1",
    "firebase-tools": "^14.3.1",
    "globals": "15.4.0",
    "http-server": "14.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.3.2",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.29.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "fuzzysort": "^3.1.0",
    "linkify-string": "^4.3.0",
    "lit-html": "^3.2.1"
  }
}